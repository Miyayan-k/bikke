<div class='search-contents'>
  <div class='bike-search'>
    <div class="bike-title">▶︎　車種名から探す</div>
      <%= search_form_for @r, url: search_reviews_path do |f| %>
        <%= f.search_field :bike_cont, placeholder: "車種名", class: "search-field" %>
        <%= f.submit "検索", class: "search-btn" %>
      <% end %>
  </div>
  <div class='displacement-search'>
    <div class="displacement-title">▶︎　排気量から探す</div>
    <ul class="displacement-list1">
      <li class="displacement">50CC以下</li>
      <li class="displacement">51~125CC</li>
      <li class="displacement">126~250CC</li>
      <li class="displacement">251~400CC</li>
    </ul>
    <ul class="displacement-list2">
      <li class="displacement">401~750CC</li>
      <li class="displacement">751~1000CC</li>
      <li class="displacement">1000CC以上</li>
    </ul>
  </div>
  <div class='maker-search'>
    <div class="maker-title">▶︎　メーカーから探す</div>
    <ul class="maker-list1">
      <%= link_to "HONDA", "#", class:"maker"%>
      <%= link_to "YAMAHA", "#", class:"maker" %>
      <%= link_to "SUZUKI", "#", class:"maker" %>
      <%= link_to "KAWASAKI", "#", class:"maker" %>
    </ul>
    <ul class="maker-list2">
      <li class="maker">DOCATI</li>
      <li class="maker">BMW</li>
      <li class="maker">Harley-Davidson</li>
      <li class="maker">TRIUMPH</li>
      <li class="maker">KTM</li>
    </ul>
    <ul class="maker-list3">
      <li class="maker">Aprilia</li>
      <li class="maker">MotoGuzzi</li>
      <li class="maker">MV Agusta</li>
      <li class="maker">Vespa</li>
    </ul>
    <ul class="maker-list4">
      <li class="maker">Indian</li>
      <li class="maker">KYMCO</li>
      <li class="maker">その他</li>
    </ul>
  </div>
  <div class='mototype-search'>
    <div class="mototype-title">▶︎　タイプから探す</div>
    <ul class="mototype-list1">
      <li class="mototype">
        <%= link_to image_tag("SS.png", class:"list-pict"), "#" %>
        スーパースポーツ</li>
      <li class="mototype">
        <%= link_to image_tag("naked.png", class:"list-pict"), "#" %>
        ネイキッド</li>
      <li class="mototype">
        <%= link_to image_tag("american.png", class:"list-pict"), "#" %>
        アメリカン</li>
      <li class="mototype">
        <%= link_to image_tag("street.png", class:"list-pict"), "#" %>
        ストリート</li>
    </ul>
    <ul class="mototype-list2">
      <li class="mototype">
        <%= link_to image_tag("offroad.png", class:"list-pict"), "#" %>
        オフロード</li>
      <li class="mototype">
        <%= link_to image_tag("motard.png", class:"list-pict"), "#" %>
        モタード</li>
      <li class="mototype">
        <%= link_to image_tag("scooter.png", class:"list-pict"), "#" %>
        スクーター</li>
      <li class="mototype">
        <%= link_to image_tag("trike.png", class:"list-pict"), "#" %>
        トライク</li>
    </ul>
  </div>
  <div class="refined-serach">
    <div class="refined-title">▶︎　絞り込み検索</div>
    <%= search_form_for @r, url: search_reviews_path do |f| %>
      <div class="refined-label">
        <%= f.label :displacement_id_eq, '排気量　　' %>
        <%= f.collection_select :displacement_id_eq, Displacement.all, :id, :name, prompt: '指定なし' %>
      </div>
      <div class="refined-label">
        <%= f.label :maker_id_eq, 'メーカー　' %>
        <%= f.collection_select :maker_id_eq, Maker.all, :id, :name, prompt: '指定なし' %>
      </div>
      <div class="refined-label">
        <%= f.label :type_id_eq, '車種タイプ' %>
        <%= f.collection_select :type_id_eq, Type.all, :id, :name, prompt: '指定なし' %>
      </div>
      <%= f.submit '検索', class:"search-btn" %>
    <% end %>
  </div>
</div>