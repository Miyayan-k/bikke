      <ul class="maker-list4">
        <li class="maker">Indian</li>
        <li class="maker">KYMCO</li>
        <li class="maker">その他</li>
      </ul>
    </div>
    <div class='mototype-search'>
      <div class="mototype-title">▶︎　タイプから探す</div>
      <ul class="mototype-list1">
        <li class="mototype">
          <%= link_to image_tag("SS.png", class:"list-pict"), "#" %>
