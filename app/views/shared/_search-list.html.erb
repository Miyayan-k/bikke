  <div class='search-contents'>
    <div class='bike-search'>
      <div class="bike-title">▶︎　車種名から探す</div>
      <%= form_with(url: "#", local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :bike, placeholder: "車種名", class: "input-box" %>
        <%= form.submit "検索", class: "search-button" %>
       <% end %>
    </div>
    <div class='displacement-search'>
      <div class="displacement-title">▶︎　排気量から探す</div>
      <ul class="displacement-list1">
        <li class="displacement">50CC以下</li>
        <li class="displacement">51~125CC</li>
        <li class="displacement">126~250CC</li>
        <li class="displacement">251~400CC</li>
      </ul>
      <ul class="displacement-list2">
        <li class="displacement">401~750CC</li>
        <li class="displacement">751~1000CC</li>
        <li class="displacement">1000CC以上</li>
      </ul>
    </div>
    <div class='maker-search'>
      <div class="maker-title">▶︎　メーカーから探す</div>
      <ul class="maker-list1">
        <%= link_to "HONDA", "#", class:"maker"%>
        <%= link_to "YAMAHA", "#", class:"maker" %>
        <%= link_to "SUZUKI", "#", class:"maker" %>
        <%= link_to "KAWASAKI", "#", class:"maker" %>
      </ul>
      <ul class="maker-list2">
        <li class="maker">DOCATI</li>
        <li class="maker">BMW</li>
        <li class="maker">Harley-Davidson</li>
        <li class="maker">TRIUMPH</li>
        <li class="maker">KTM</li>
      </ul>
      <ul class="maker-list3">
        <li class="maker">Aprilia</li>
        <li class="maker">MotoGuzzi</li>
        <li class="maker">MV Agusta</li>
        <li class="maker">Vespa</li>
